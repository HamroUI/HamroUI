/*Application configuration json file*/

{
  "pkgname": "",
  /* application package name*/
  "primarydark":"",
  "primarycolor": "",
  /*  main color in the application , should be in the hex code for ef #FF0000 for red*/
  "secondarycolor": "",
  /* secondary color and should be in hex code*/
  "banneradd": "admob_key",
  /*  banner add admob key*/
  "fullscreenkey": "admob_key",
  /*fullscreen admob key*/
  "baseurl": "",
  /* base url for the server call*/
  "youtubeAPIKey": "",
  /* should include the youtube api key if the application has the youtube video

  if the app has sidebar should keep the Sidebar jsonobject
  if sidebar is missing the app will not have sidebar
  the menu in the sidebar will be shown in the order of the jsonArray
  menu numbers not limited*/

  "sidebar": {
    "menu": [
      // sidebar menu
      {
        "title": "home",
        // sidebar menu title
        "icon": "",
        // sidebar menu icon url should be valid url
        "link": "sp://home"
        // deeplink of the page that need to be open
      },
      {
        "title": "home",
        "icon": "",
        "link": "sp://home"
      },
      {
        "title": "home",
        "icon": "",
        "link": "sp://home"
      },
      {
        "title": "home",
        "icon": "",
        "link": "sp://home"
      }
    ],
    "width": 300,
    // width of the sidebar when opened fully
    "align": "right"
    // position of the sidebar for eg right will place the sidebar open from right -> left
  },
  /*Landing page config*/
  "home": {
    "actionbar": [
      {
        "title": "refresh",
        "showalways": true,
        /*forcefully shows the icon in actionbar*/
        "icon": "https://d30y9cdsu7xlg0.cloudfront.net/png/17241-200.png",
        "link": ""
      },
      {
        "title": "share",
        "showalways": false,
        /* if false shows in popupmenu*/
        "icon": "",
        "link": ""
      },
      {
        "title": "disclaimer",
        "showalways": false,
        "icon": "",
        "link": ""
      },
      {
        "title": "rateus",
        "showalways": false,
        "icon": "",
        "link": ""
      },
      {
        "title": "About Developer",
        "showalways": false,
        "icon": "",
        "link": ""
      }
    ],
    "alert": true,
    /* should show the alertview*/
    "slider": true,
    /*should show the slider view*/

    /*grid option
    if app has grid then need to kept otherwise simply remove the grid array
    contains the menu item in horizontal
     can contain any number of the menu option
    if not fitted in the screen will be scrolled horizontally */

    "grid": [
      {
        "title": "news",
        /*grid menu title for eg news*/
        "icon": "iconurl",
        /*valid icon url*/
        "link": "sp://news"
        /*deeplink of the page to be opened when clicked*/
      },
      {
        "title": "vidoes",
        "icon": "iconurl",
        "link": "sp://videos"
      },
      {
        "title": "gallery",
        "icon": "iconurl",
        "link": "sp://gallery"
      }
    ],
    /* modules if needed to be shown in home*/
    "modules": [
      {
        "type": "news",
        /* type of modules*/
        "max": 5,
        /*max number of items need to be shown in home*/
        "showall": true,
        /*should keep the showall*/
        "link": "sp://news",
        /*link to be followed when showall clicked*/
        "orientation": "horizontal"
        /* if horizontal the news will be shown horizontally*/
      },
      {
        "type": "videos",
        "max": 5,
        "showall": true,
        "link": "sp://videos",
        "orientation": "vertical"
      },
      {
        "type": "gallery",
        "max": 5,
        "showall": true,
        "link": "sp://gallery",
        "orientation": "horizontal"
      },
      {
        "type": "audio",
        "max": 5,
        "showall": true,
        "link": "sp://news",
        "orientation": "vertical"
      }
    ]
  },
  /* bottomsheet configuration
  if not needed simply remove this array */
  "bottomsheet": [
    {
      "title": "news",
      "icon": "",
      "link": "sp://news"
    },
    {
      "title": "audio",
      "icon": "",
      "link": "sp://audio"
    },
    {
      "title": "gallery",
      "icon": "",
      "link": "sp://gallery"
    },
    {
      "title": "videos",
      "icon": "",
      "link": "sp://videos"
    }
  ],
  /* modules configuration*/

  "modulesconfig": [
    {
      "type": "news",
      /* module type*/
      "request": {
        "action": "news",
        "start": "0",
        "limit": "10"
      },
      /* request parameters as needed by REST api*/

      "url": "",
      /* url if it is different from baseurl*/
      "hasPagination": true,
      /* set true if has pagination*/
      "persist": true,
      /* set true if needed to save offline*/
      "loginrequired": false,
      /* set true if this features need login*/
      "bookmark": true,
      /* set true if it has bookmark*/
      "hasbanneradd": [
        true,
        /* shows banneradd*/
        "top"
        /* shows in the top if the view*/
      ],
      "hasFullScreen": [
        true,
        /* shows fullscreen*/
        "backpressed",
        /* shows when backpressed*/
        0,
        /* shows everytime if 1, shows when backpressed for 2 times*/
        0
        /* delay time to show the add*/
      ]
    },
    {
      "type": "gallery",
      "request": {
        "action": "get_photo",
        "start": "0",
        "limit": "10"
      },
      "url": "",
      "hasPagination": true,
      "persist": true,
      "loginrequired": false,
      "bookmark": true,
      "hasbanneradd": [
        true,
        "bottom"
      ],
      "hasFullScreen": [
        true,
        "onopen",
        /* show the full screen add if opened two times after the 4 sec delay*/
        1,
        4000
      ]
    },
    {
      "type": "video",
      "request": {
        "action": "videos",
        "start": "0",
        "limit": "10"
      },
      "url": "",
      "hasPagination": true,
      "persist": true,
      "loginrequired": false,
      "bookmark": true,
      "hasbanneradd": [
        true,
        "bottom"
      ],
      "hasFullScreen": [
        true,
        "onopen",
        1,
        3000
      ]
    }
  ]
}